// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String   @id @default(uuid()) @db.Uuid
  email String
  role  UserRole

  @@map("users")
}

enum UserRole {
  INVESTOR
  ADMIN
  FUNDRASIER
}
